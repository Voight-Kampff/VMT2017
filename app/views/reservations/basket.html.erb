<main>
	<div class="container">
		<div class="row">
			<div class="col s12 m12 l12">
				<h4>Votre Commande</h4>
				<table>
				<% @reservations.each do |reservation| %>
					<% if reservation.seat.concert.id != @this_concert %>
					<thead>
						<tr>
							<td colspan="3"><b><%=reservation.seat.concert.name%></b></td>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td colspan="3"><em><%=(I18n.localize reservation.seat.concert.date, format: :concert).capitalize%> au <%=reservation.seat.concert.location%></em></td>
						</tr>
					<% @this_concert= reservation.seat.concert.id %>
					<% end %>
						<tr>
							<td><%=reservation.reservation_type.name.humanize%></td>
							<td class="right-align"><%=reservation.seat.row%><%=reservation.seat.column%></td>
							<td class="right-align"><%=reservation.seat.price%>.-</td>
						</tr>
					<% end %>
						<tr style="border-top:1px solid #d0d0d0">
							<td><b>Total</b></td>
							<td class="right-align"></td>
							<td class="right-align"><b><%=@order.calculate_price%>.-</b></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
		<div class="row right-align">
			<div class="col s12  m12 l12">
				<%= link_to("Continuer", new_charge_path, :class => "waves-effect waves-light btn blue")%>
			</div>
		</div>
	</div>
</main>